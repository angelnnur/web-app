<style>
    table {
        width: 100%;
        text-align: center;
        border-bottom: 2px solid #dfdfdf;
        border-radius: 6px;
        border-collapse: separate;
        border-spacing: 0px;
        line-height: 45px;
    }

        table thead tr {
            color: #ffffff;
            font-weight: bold;
            background: #c83240;
        }

        table tr td {
            border-right: 1px solid #dfdfdf;
        }

            table tr td:last-child {
                border-right: 0px;
            }

        table tbody tr:nth-child(1n) {
            background: #f6f6f6;
        }

        table tbody tr:nth-child(2n) {
            background: #e6e6e6;
        }

        table tbody tr:hover {
            background: #ffe8e8;
            transition-duration: 0.6s;
        }

    #searcht {
        border: 0.001px solid black;
        width: 60%;
        height: 25px;
        margin: 10px;
    }

    #searchb {
        width: 100px;
        height: 27px;
        border: 0.15px solid;
        align-content: center;
        font-size: 15px;
    }
</style>
<div style="font-size:16px">
    <h3>Филиалы</h3>

    <form asp-controller="Home" asp-action="Filial" style="padding: 10px; margin:auto">
        <p>
            Id-филиала или адрес: <input type="text" name="search_text" id="searcht">
            <input type="submit" value="Найти" id="searchb" />
        </p>
    </form>
    
    <table>
        <tr>
            <th>ID-филиала</th>
            <th>Название филиала</th>
            <th>Адрес</th>

        </tr>
        @foreach (var Филиалы in Model)
        {
            <tr>
                <td>@Филиалы.id_f</td>
                <td>@Филиалы.names</td>
                <td>@Филиалы.addres</td>
            </tr>
        }
    </table>
</div>
